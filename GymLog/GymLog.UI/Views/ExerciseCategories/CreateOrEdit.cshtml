@model GymLog.UI.Models.ExerciseCategory

@if (Model.ExerciseCategoryId == 0)
{
    ViewData["Title"] = "Create Exercise Category";
    <h2>Create Exercise Category</h2>
}
else
{
    ViewData["Title"] = "Edit Exercise Category";
    <h2>Edit Exercise Category</h2>
}

<form asp-action="SaveExerciseCategory" method="post">
    <div class="form-group">
        <label asp-for="ExerciseCategoryName" class="control-label"></label>
        <input asp-for="ExerciseCategoryName" class="form-control" />
        <span asp-validation-for="ExerciseCategoryName" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ExerciseCategoryId" />

    <br/>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="ExerciseCategories" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
